dicionario = {
    1: {"nome": "arroz 5kg", "quantidade": 22, "valor": 24.90},
    2: {"nome": "feij칚o 1kg", "quantidade": 15, "valor": 8.75},
    3: {"nome": "칩leo de soja 900ml", "quantidade": 19, "valor": 7.99},
    4: {"nome": "a칞칰car refinado 1kg", "quantidade": 12, "valor": 4.89},
    5: {"nome": "leite integral 1L", "quantidade": 25, "valor": 5.49},
    6: {"nome": "caf칠 torrado 500g", "quantidade": 30, "valor": 16.90},
    7: {"nome": "macarr칚o espaguete 500g", "quantidade": 18, "valor": 3.99},
    8: {"nome": "farinha de trigo 1kg", "quantidade": 20, "valor": 4.59},
    9: {"nome": "biscoito recheado 120g", "quantidade": 14, "valor": 2.99},
    10: {"nome": "papel higi칡nico (12 rolos)", "quantidade": 10, "valor": 18.90}

}

def visualizar_estoque():
    print("\n Estoque Atual:")
    for codigo, produto in dicionario.items():
        print(f"C칩d: {codigo} | {produto['nome']} - Quantidade: {produto['quantidade']} - R$ {produto['valor']:.2f}")

def cadastrar_produto():
    nome = input("Nome do novo produto: ")
    quantidade = int(input("Quantidade inicial: "))
    valor = float(input("Valor unit치rio: "))
    novo_codigo = max(dicionario.keys()) + 1 if dicionario else 1
    dicionario[novo_codigo] = {"nome": nome, "quantidade": quantidade, "valor": valor}
    print(" Produto adicionado!")

def atualizar_quantidade():
    codigo = int(input("Digite o c칩digo do produto: "))
    if codigo in dicionario:
        nova_qtd = int(input("Nova quantidade: "))
        dicionario[codigo]["quantidade"] = nova_qtd
        print(" Quantidade atualizada!")
    else:
        print(" C칩digo n칚o encontrado.")

def pesquisar_produto():
    nome_pesquisado = input("Digite o nome exato do produto: ").strip().lower()
    encontrado = False
    for codigo, produto in dicionario.items():
        if produto["nome"].lower() == nome_pesquisado:
            print("\n Produto encontrado:")
            print(f"C칩d: {codigo} | Nome: {produto['nome']} | Quantidade: {produto['quantidade']} | Valor: R$ {produto['valor']:.2f}")
            encontrado = True
            break
    if not encontrado:
        print(" Produto n칚o encontrado. Verifique o nome digitado.")

def relatorio_produtos():
    print("\n Relat칩rio de Produtos:")

    if not dicionario:
        print(" Estoque vazio.")
        return

    total_itens = 0
    valor_total = 0

    mais_caro = None
    mais_barato = None
    maior_estoque = None
    menor_estoque = None

    for codigo, produto in dicionario.items():
        quantidade = produto["quantidade"]
        valor = produto["valor"]
        total_itens += quantidade
        valor_total += quantidade * valor

        if mais_caro is None or valor > dicionario[mais_caro]["valor"]:
            mais_caro = codigo

        if mais_barato is None or valor < dicionario[mais_barato]["valor"]:
            mais_barato = codigo

        if maior_estoque is None or quantidade > dicionario[maior_estoque]["quantidade"]:
            maior_estoque = codigo

        if menor_estoque is None or quantidade < dicionario[menor_estoque]["quantidade"]:
            menor_estoque = codigo

    print(f" Total de itens no estoque: {total_itens}")
    print(f" Valor total do estoque: R$ {valor_total:.2f}")
    print(f" Produto mais caro: {dicionario[mais_caro]['nome']} (R$ {dicionario[mais_caro]['valor']:.2f})")
    print(f" Produto mais barato: {dicionario[mais_barato]['nome']} (R$ {dicionario[mais_barato]['valor']:.2f})")
    print(f" Produto com maior quantidade: {dicionario[maior_estoque]['nome']} ({dicionario[maior_estoque]['quantidade']} unidades)")
    print(f" Produto com menor quantidade: {dicionario[menor_estoque]['nome']} ({dicionario[menor_estoque]['quantidade']} unidades)")

def remover_produto():
    codigo = int(input("Digite o c칩digo do produto que deseja remover: "))
    if codigo in dicionario:
        removido = dicionario.pop(codigo)
        print(f"游딈 Produto '{removido['nome']}' removido com sucesso.")
    else:
        print(" C칩digo n칚o encontrado.")

usuario_correto = "1"
senha_correta = "1"

usuario = input("Usu치rio: ")
senha = input("Senha: ")

if usuario == usuario_correto and senha == senha_correta:
    print("Acesso permitido ")

else:
    print(" Usu치rio ou senha incorretos.")





    while True:
        print("\n--- Menu Estoque ---")
        print("1. Visualizar estoque atual")
        print("2. Adicionar novo item ao estoque")
        print("3. Atualizar quantidade de um item")
        print("4. Pesquisar produto (nome exato)")
        print("5. Relat칩rio de produtos")
        print("6. Remover um item do estoque")
        print("7. Sair")

        escolha = input("Escolha uma op칞칚o (1-7): ")
        if escolha == "1":
            visualizar_estoque()
        elif escolha == "2":
            cadastrar_produto()
        elif escolha == "3":
            atualizar_quantidade()
        elif escolha == "4":
            pesquisar_produto()
        elif escolha == "5":
            relatorio_produtos()
        elif escolha == "6":
            remover_produto()
        elif escolha == "7":
            print(" Saindo do sistema...")
            break
        else: 
            print(" Op칞칚o inv치lida. Tente novamente.")
